@page
@model VerneMQWebhookAuth.Pages.IndexModel
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>VerneMQ Webhook Dashboard</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.0/signalr.min.js"></script>
    <style>
        :root {
            --bg-main: #fafafa;
            --bg-card: #ffffff;
            --border-color: #eaeaea;
            --text-primary: #171717;
            --text-secondary: #666666;
            --text-muted: #888888;
            --accent: #001f3f; /* Dark Navy for a professional look */
            --accent: #000000;
            --accent-hover: #171717;
            --success: #10b981;
            --warning: #f59e0b;
            --danger: #ef4444;
            --info: #3b82f6;
            --radius-md: 8px;
            --radius-lg: 12px;
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            --transition: all 0.2s ease;
        }

        body {
            background-color: var(--bg-main);
            color: var(--text-primary);
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            -webkit-font-smoothing: antialiased;
            letter-spacing: -0.011em;
        }

        /* Layout */
        .dashboard-container {
            max-width: 1240px;
            margin: 0 auto;
            padding: 2rem 1.5rem;
        }

        /* Navbar */
        .navbar {
            background: var(--bg-card) !important;
            border-bottom: 1px solid var(--border-color);
            padding: 0.75rem 0;
            top: 0;
            z-index: 1000;
        }

        .navbar-brand {
            font-weight: 700;
            color: var(--text-primary) !important;
            font-size: 1.1rem;
            letter-spacing: -0.02em;
        }

        /* Tabs */
        .nav-tabs {
            border-bottom: 1px solid var(--border-color);
            margin-bottom: 2rem;
            gap: 1.5rem;
        }

        .nav-tabs .nav-link {
            border: none;
            color: var(--text-secondary);
            font-weight: 500;
            font-size: 0.9rem;
            padding: 0.75rem 0.25rem;
            position: relative;
            background: transparent !important;
            transition: var(--transition);
        }

        .nav-tabs .nav-link:hover {
            color: var(--text-primary);
        }

        .nav-tabs .nav-link.active {
            color: var(--accent);
            border: none;
        }

        .nav-tabs .nav-link.active::after {
            content: '';
            position: absolute;
            bottom: -1px;
            left: 0;
            right: 0;
            height: 2px;
            background: var(--accent);
        }

        /* Stat Cards */
        .stat-card {
            background: var(--bg-card);
            border: 1px solid var(--border-color);
            border-radius: var(--radius-lg);
            padding: 1.5rem;
            height: 100%;
            transition: var(--transition);
        }

        .stat-card:hover {
            border-color: #d1d1d1;
        }

        .stat-label {
            color: var(--text-secondary);
            font-size: 0.85rem;
            font-weight: 500;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .stat-value {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--text-primary);
            letter-spacing: -0.03em;
        }

        /* Cards & Tables */
        .content-card {
            background: var(--bg-card);
            border: 1px solid var(--border-color);
            border-radius: var(--radius-lg);
            overflow: hidden;
            box-shadow: var(--shadow-sm);
        }

        .table {
            margin-bottom: 0;
        }

        .table thead th {
            background: #fafafa;
            color: var(--text-secondary);
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            padding: 1rem 1.5rem;
            border-bottom: 1px solid var(--border-color);
        }

        .table tbody td {
            padding: 1rem 1.5rem;
            vertical-align: middle;
            color: var(--text-primary);
            font-size: 0.9rem;
            border-bottom: 1px solid var(--border-color);
        }

        .table tr:last-child td {
            border-bottom: none;
        }

        /* Badges */
        .badge {
            font-weight: 500;
            font-size: 0.75rem;
            padding: 0.35em 0.65em;
            border-radius: 20px;
        }

        .badge-active {
            background-color: #ecfdf5;
            color: #065f46;
            border: 1px solid #a7f3d0;
        }

        .badge-inactive {
            background-color: #f3f4f6;
            color: #374151;
            border: 1px solid #e5e7eb;
        }

        .badge-admin {
            background-color: #eef2ff;
            color: #3730a3;
            border: 1px solid #c7d2fe;
        }

        /* Buttons & Forms */
        .btn {
            font-weight: 500;
            font-size: 0.875rem;
            padding: 0.5rem 1rem;
            border-radius: var(--radius-md);
            transition: var(--transition);
        }

        .btn-primary {
            background-color: var(--accent);
            border-color: var(--accent);
            color: white !important;
        }

        .btn-primary:hover {
            background-color: #262626;
            border-color: #262626;
        }

        .btn-outline-primary {
            color: var(--accent);
            border-color: var(--border-color);
            background: transparent;
        }

        .btn-outline-primary:hover {
            background-color: #f9f9f9;
            border-color: #d1d1d1;
            color: var(--accent);
        }

        .search-box {
            border: 1px solid var(--border-color);
            background: var(--bg-card);
            font-size: 0.9rem;
            padding-left: 1rem;
            height: 40px;
            transition: var(--transition);
        }

        .search-box:focus {
            outline: none;
            border-color: #a3a3a3;
            box-shadow: 0 0 0 4px rgba(0,0,0,0.03);
        }

        /* Monitoring Specifics */
        .monitoring-card {
            background: var(--bg-card);
            border: 1px solid var(--border-color);
            border-radius: var(--radius-lg);
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .metric-item {
            padding: 1.25rem;
            border-radius: var(--radius-md);
            background: #fcfcfc;
            border: 1px solid var(--border-color);
        }

        .metric-label {
            font-size: 0.75rem;
            color: var(--text-secondary);
            font-weight: 600;
            text-transform: uppercase;
            margin-bottom: 0.5rem;
        }

        .metric-value {
            font-size: 1.5rem;
            font-weight: 700;
            letter-spacing: -0.02em;
        }

        .status-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            display: inline-block;
        }

        .status-dot.connected { background: var(--success); box-shadow: 0 0 8px rgba(16, 185, 129, 0.4); }
        .status-dot.disconnected { background: var(--danger); box-shadow: 0 0 8px rgba(239, 68, 68, 0.4); }
        .status-dot.warning { background: var(--warning); box-shadow: 0 0 8px rgba(245, 158, 11, 0.4); }
        .status-dot.pulsing { animation: pulse 2s ease-in-out infinite; }
        @@keyframes pulse { 0%, 100% { opacity: 1; } 50% { opacity: 0.5; } }

        .grafana-embed {
            border: 1px solid var(--border-color);
            border-radius: var(--radius-md);
            overflow: hidden;
            background: #000;
        }

        /* Critical Alert Banner */
        .alert-banner {
            background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%);
            border: 1px solid #fecaca;
            border-left: 4px solid var(--danger);
            border-radius: var(--radius-md);
            padding: 1rem 1.25rem;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 1rem;
            animation: slideIn 0.3s ease-out;
        }
        .alert-banner.warning {
            background: linear-gradient(135deg, #fffbeb 0%, #fef3c7 100%);
            border-color: #fde68a;
            border-left-color: var(--warning);
        }
        .alert-banner.success {
            background: linear-gradient(135deg, #ecfdf5 0%, #d1fae5 100%);
            border-color: #a7f3d0;
            border-left-color: var(--success);
        }
        @@keyframes slideIn { from { opacity: 0; transform: translateY(-10px); } to { opacity: 1; transform: translateY(0); } }
        .alert-banner .alert-icon {
            font-size: 1.5rem;
        }
        .alert-banner .alert-content {
            flex: 1;
        }
        .alert-banner .alert-title {
            font-weight: 600;
            font-size: 0.95rem;
            margin-bottom: 0.25rem;
        }
        .alert-banner .alert-message {
            font-size: 0.85rem;
            color: var(--text-secondary);
        }
        .alert-banner .alert-action {
            white-space: nowrap;
        }

        /* Health Score Ring */
        .health-score {
            position: relative;
            width: 100px;
            height: 100px;
        }
        .health-score svg {
            transform: rotate(-90deg);
        }
        .health-score-bg {
            fill: none;
            stroke: #e5e7eb;
            stroke-width: 8;
        }
        .health-score-progress {
            fill: none;
            stroke-width: 8;
            stroke-linecap: round;
            transition: stroke-dashoffset 0.5s ease-out, stroke 0.3s ease;
        }
        .health-score-value {
            position: absolute;
            inset: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        .health-score-percentage {
            font-size: 1.5rem;
            font-weight: 700;
            letter-spacing: -0.03em;
        }
        .health-score-label {
            font-size: 0.7rem;
            color: var(--text-secondary);
            text-transform: uppercase;
            font-weight: 500;
        }

        /* Signal Indicator */
        .signal-indicator {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 0.75rem;
            border-radius: var(--radius-md);
            background: #f9fafb;
            border: 1px solid var(--border-color);
        }
        .signal-indicator.critical {
            background: #fef2f2;
            border-color: #fecaca;
        }
        .signal-indicator.warning {
            background: #fffbeb;
            border-color: #fde68a;
        }
        .signal-indicator.healthy {
            background: #ecfdf5;
            border-color: #a7f3d0;
        }
        .signal-dot {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            flex-shrink: 0;
        }
        .signal-dot.critical { background: var(--danger); }
        .signal-dot.warning { background: var(--warning); }
        .signal-dot.healthy { background: var(--success); }

        /* Metric Trend */
        .metric-trend {
            display: inline-flex;
            align-items: center;
            gap: 0.25rem;
            font-size: 0.75rem;
            font-weight: 500;
            padding: 0.15rem 0.5rem;
            border-radius: 20px;
        }
        .metric-trend.up { background: #ecfdf5; color: #047857; }
        .metric-trend.down { background: #fef2f2; color: #dc2626; }
        .metric-trend.neutral { background: #f3f4f6; color: #6b7280; }

        /* Critical Stats Card */
        .critical-stat-card {
            background: var(--bg-card);
            border: 1px solid var(--border-color);
            border-radius: var(--radius-lg);
            padding: 1.25rem;
            position: relative;
            overflow: hidden;
        }
        .critical-stat-card.danger { border-left: 4px solid var(--danger); }
        .critical-stat-card.warning { border-left: 4px solid var(--warning); }
        .critical-stat-card.success { border-left: 4px solid var(--success); }
        .critical-stat-card .stat-icon {
            position: absolute;
            right: 1rem;
            top: 1rem;
            font-size: 2rem;
            opacity: 0.1;
        }

        /* Modals */
        .modal-content {
            border: none;
            border-radius: var(--radius-lg);
            box-shadow: 0 20px 25px -5px rgba(0,0,0,0.1), 0 10px 10px -5px rgba(0,0,0,0.04);
        }

        .modal-header {
            padding: 1.5rem;
            border-bottom: 1px solid var(--border-color);
            background: white;
            color: var(--text-primary);
        }

        .modal-title {
            font-weight: 700;
            letter-spacing: -0.02em;
        }

        .modal-body {
            padding: 1.5rem;
        }

        .modal-footer {
            padding: 1.25rem 1.5rem;
            border-top: 1px solid var(--border-color);
        }

        .form-label {
            font-weight: 500;
            font-size: 0.875rem;
            margin-bottom: 0.5rem;
            color: var(--text-secondary);
        }

        /* Custom Scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
        }
        ::-webkit-scrollbar-track {
            background: #f1f1f1;
        }
        ::-webkit-scrollbar-thumb {
            background: #d1d1d1;
            border-radius: 4px;
        }
        ::-webkit-scrollbar-thumb:hover {
            background: #a1a1a1;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid px-4 md:px-5">
            <a class="navbar-brand d-flex align-items-center" href="#">
                <span class="me-2" style="background: #000; color: #fff; width: 28px; height: 28px; display: flex; align-items: center; justify-content: center; border-radius: 6px;">
                    <i class="fas fa-bolt" style="font-size: 0.8rem;"></i>
                </span>
                VerneMQ
            </a>
            <div class="ms-auto d-flex align-items-center gap-3">
                <div class="connection-status d-none d-md-flex align-items-center gap-2">
                    <span class="status-dot connected" id="connectionDot"></span>
                    <span id="connectionText" class="small fw-medium">Connected</span>
                </div>
                <button class="btn btn-outline-primary btn-sm" onclick="refreshAllData()">
                    <i class="fas fa-rotate me-1 text-muted"></i> Refresh
                </button>
            </div>
        </div>
    </nav>

    <div class="dashboard-container">
        <!-- Navigation Tabs -->
        <ul class="nav nav-tabs" id="mainTabs" role="tablist">
            <li class="nav-item">
                <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#monitoring" type="button">
                    Monitoring
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#logs" type="button">
                    Logs
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#mqttUsers" type="button">
                    Users
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#webhooks" type="button">
                    Webhooks
                </button>
            </li>
        </ul>

        <!-- Tab Contents -->
        <div class="tab-content">
            <!-- MQTT Users Tab -->
            <div class="tab-pane fade" id="mqttUsers">
                <!-- Stats Cards -->
                <div class="row g-4 mb-4">
                    <div class="col-6 col-md-3">
                        <div class="stat-card">
                            <div class="stat-label">
                                <i class="fas fa-users-viewfinder text-muted"></i> Total Users
                            </div>
                            <div class="stat-value" id="totalMqttUsers">0</div>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="stat-card">
                            <div class="stat-label">
                                <i class="fas fa-circle-check text-success"></i> Active
                            </div>
                            <div class="stat-value" id="activeMqttUsers">0</div>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="stat-card">
                            <div class="stat-label">
                                <i class="fas fa-shield-halved text-info"></i> Admins
                            </div>
                            <div class="stat-value" id="adminMqttUsers">0</div>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="stat-card">
                            <div class="stat-label">
                                <i class="fas fa-bolt-lightning text-warning"></i> Logins (24h)
                            </div>
                            <div class="stat-value" id="recentLogins">0</div>
                        </div>
                    </div>
                </div>

                <!-- Users Section -->
                <div class="content-card">
                    <div class="p-4 d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 border-bottom">
                        <div class="d-flex flex-wrap gap-2">
                            <div class="position-relative">
                                <i class="fas fa-search position-absolute top-50 start-0 translate-middle-y ms-3 text-muted" style="font-size: 0.8rem;"></i>
                                <input type="text" class="form-control search-box ps-5" id="mqttUserSearch" 
                                    placeholder="Search users..." style="width: 280px;">
                            </div>
                            <select class="form-select search-box" id="mqttUserFilter" style="width: 140px;">
                                <option value="">All Status</option>
                                <option value="true">Active</option>
                                <option value="false">Inactive</option>
                            </select>
                        </div>
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createMqttUserModal">
                            <i class="fas fa-plus me-2"></i>New User
                        </button>
                    </div>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>User / Client</th>
                                    <th>Description</th>
                                    <th>Status</th>
                                    <th>Role</th>
                                    <th>Last Login</th>
                                    <th>Count</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody id="mqttUserTableBody">
                                <tr>
                                    <td colspan="7" class="text-center py-5">
                                        <div class="spinner-border spinner-border-sm text-muted" role="status"></div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Webhooks Tab -->
            <div class="tab-pane fade" id="webhooks">
                <!-- Webhooks Table -->
                <div class="content-card">
                    <div class="p-4 d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 border-bottom">
                        <div>
                            <h6 class="mb-1 fw-bold">Outbound Webhooks</h6>
                            <p class="small text-secondary mb-0">Send notifications to external services when VerneMQ events occur.</p>
                        </div>
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createWebhookModal">
                            <i class="fas fa-plus me-2"></i>New Webhook
                        </button>
                    </div>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>URL</th>
                                    <th>Method</th>
                                    <th>Status</th>
                                    <th>Last Executed</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody id="webhookTableBody">
                                <tr>
                                    <td colspan="6" class="text-center py-5">
                                        <div class="spinner-border spinner-border-sm text-muted" role="status"></div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Monitoring Tab (Primary View) -->
            <div class="tab-pane fade show active" id="monitoring">
                <!-- Critical Alerts Section (dynamically shown when issues exist) -->
                <div id="criticalAlertsContainer"></div>

                <!-- System Health Overview Row -->
                <div class="row g-4 mb-4">
                    <!-- VerneMQ Status -->
                    <div class="col-6 col-lg-3">
                        <div class="stat-card" id="vernemqCard">
                            <div class="stat-label">
                                <i class="fas fa-server"></i> VerneMQ Broker
                            </div>
                            <div id="vernemqStatusCard" class="d-flex align-items-center gap-2 mt-2">
                                <span class="status-dot connected pulsing" id="vernemqDot"></span>
                                <span class="stat-value" style="font-size: 1.25rem; color: var(--success);">Online</span>
                            </div>
                            <div class="small text-muted mt-2" id="vernemqVersion">v1.x</div>
                        </div>
                    </div>
                    <!-- Webhook API Status -->
                    <div class="col-6 col-lg-3">
                        <div class="stat-card" id="webhookCard">
                            <div class="stat-label">
                                <i class="fas fa-link"></i> Webhook API
                            </div>
                            <div id="webhookStatusCard" class="d-flex align-items-center gap-2 mt-2">
                                <span class="status-dot connected pulsing" id="webhookDot"></span>
                                <span class="stat-value" style="font-size: 1.25rem; color: var(--success);">Online</span>
                            </div>
                            <div class="small text-muted mt-2" id="webhookLatency">Latency: --</div>
                        </div>
                    </div>
                    <!-- System Uptime -->
                    <div class="col-6 col-lg-3">
                        <div class="stat-card">
                            <div class="stat-label">
                                <i class="fas fa-clock"></i> System Uptime
                            </div>
                            <div class="stat-value mt-2" style="font-size: 1.25rem;" id="systemUptime">-</div>
                            <div class="small text-muted mt-2" id="lastRefresh">Last check: --</div>
                        </div>
                    </div>
                    <!-- Webhook Health Score -->
                    <div class="col-6 col-lg-3">
                        <div class="stat-card d-flex align-items-center gap-3">
                            <div class="health-score" id="healthScoreRing">
                                <svg width="100" height="100" viewBox="0 0 100 100">
                                    <circle class="health-score-bg" cx="50" cy="50" r="42"></circle>
                                    <circle class="health-score-progress" cx="50" cy="50" r="42" 
                                        stroke="#10b981" stroke-dasharray="264" stroke-dashoffset="264" id="healthScoreProgress"></circle>
                                </svg>
                                <div class="health-score-value">
                                    <span class="health-score-percentage" id="healthScoreValue">--%</span>
                                    <span class="health-score-label">Health</span>
                                </div>
                            </div>
                            <div>
                                <div class="small fw-bold text-secondary">Webhook Success Rate</div>
                                <div class="small text-muted" id="healthScoreDetails">Loading...</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Critical Metrics Row -->
                <div class="row g-4 mb-4">
                    <div class="col-md-3 col-6">
                        <div class="critical-stat-card" id="connectionsCard">
                            <i class="fas fa-wifi stat-icon text-info"></i>
                            <div class="stat-label mb-1">
                                <i class="fas fa-wifi text-info"></i> Active Connections
