@page
@model VerneMQWebhookAuth.Pages.IndexModel
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="VerneMQ Dashboard - Monitor and manage your MQTT broker, webhooks, and users" />
    <title>VerneMQ Dashboard</title>
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="shortcut icon" href="/favicon.ico">
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Vendor CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
    
    <!-- App CSS -->
    <link href="/css/dashboard.css" rel="stylesheet">
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid px-4">
            <a class="navbar-brand" href="#">
                <img src="/logo_dashboard.png" alt="VerneMQ Logo" style="height: 32px; border-radius: var(--radius-md);">
                VerneMQ
            </a>
            <div class="ms-auto d-flex align-items-center gap-3">
                <div class="connection-badge d-none d-md-flex" id="connectionBadge">
                    <span class="status-dot online pulsing" id="connectionDot" style="width: 6px; height: 6px;"></span>
                    <span id="connectionText">Connected</span>
                </div>
                <button class="btn btn-outline btn-sm" onclick="refreshAllData()">
                    <i class="fas fa-rotate me-1 text-muted"></i> Refresh
                </button>
                <div class="dropdown">
                    <button class="btn btn-outline btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-user me-1"></i> @User.Identity?.Name
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><span class="dropdown-item-text small text-muted">Signed in as <strong>@User.Identity?.Name</strong></span></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#" onclick="logout()"><i class="fas fa-sign-out-alt me-2"></i>Sign out</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="dashboard-container">
        <!-- Navigation Tabs -->
        <ul class="nav nav-tabs" id="mainTabs" role="tablist">
            <li class="nav-item">
                <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#monitoring" type="button">
                    Monitoring
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#logs" type="button">
                    Logs
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#mqttUsers" type="button">
                    Users
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#webhooks" type="button">
                    Webhooks
                </button>
            </li>
        </ul>

        <!-- Tab Contents -->
        <div class="tab-content">
            <!-- Monitoring Tab (Default Active) -->
            <div class="tab-pane fade show active" id="monitoring">
                @await Html.PartialAsync("_MonitoringTab")
            </div>

            <!-- Logs Tab -->
            <div class="tab-pane fade" id="logs">
                @await Html.PartialAsync("_LogsTab")
            </div>

            <!-- MQTT Users Tab -->
            <div class="tab-pane fade" id="mqttUsers">
                @await Html.PartialAsync("_UsersTab")
            </div>

            <!-- Webhooks Tab -->
            <div class="tab-pane fade" id="webhooks">
                @await Html.PartialAsync("_WebhooksTab")
            </div>
        </div>
    </div>

    <!-- Modal Dialogs -->
    @await Html.PartialAsync("_Modals")

    <!-- Vendor Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.0/signalr.min.js"></script>
    
    <!-- App Script -->
    <script src="/js/dashboard.js"></script>
</body>

</html>