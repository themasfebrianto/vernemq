        async function createMqttUser() {
            const form = document.getElementById('createMqttUserForm');
            const formData = new FormData(form);
            const data = {
                username: formData.get('username'),
                password: formData.get('password'),
                description: formData.get('description') || null,
                allowedClientId: formData.get('allowedClientId') || null,
                allowedPublishTopics: formData.get('allowedPublishTopics') || null,
                allowedSubscribeTopics: formData.get('allowedSubscribeTopics') || null,
                maxConnections: parseInt(formData.get('maxConnections')) || 0,
                isAdmin: formData.get('isAdmin') === 'on'
            };

            try {
                const response = await fetch('/api/mqttusers', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                if (response.ok) {
                    bootstrap.Modal.getInstance(document.getElementById('createMqttUserModal')).hide();
                    form.reset();
                    loadMqttUsers();
                    loadMqttUserStats();
                    showAlert('MQTT user created successfully!', 'success');
                } else {
                    const error = await response.json();
                    showAlert(error.error || 'Failed to create user', 'danger');
                }
            } catch (error) {
                showAlert('Error creating user: ' + error.message, 'danger');
            }
        }

        async function editMqttUser(id) {
            try {
                const response = await fetch(`/api/mqttusers/${id}`);
                if (response.ok) {
                    const user = await response.json();
                    document.getElementById('editUserId').value = user.id;
                    document.getElementById('editUsername').value = user.username;
                    document.getElementById('editDescription').value = user.description || '';
                    document.getElementById('editMaxConnections').value = user.maxConnections;
                    document.getElementById('editPublishTopics').value = user.allowedPublishTopics || '';
                    document.getElementById('editSubscribeTopics').value = user.allowedSubscribeTopics || '';
                    document.getElementById('editIsAdmin').checked = user.isAdmin;
                    document.getElementById('editIsActive').checked = user.isActive;
                    
                    new bootstrap.Modal(document.getElementById('editMqttUserModal')).show();
                }
            } catch (error) {
                showAlert('Error loading user: ' + error.message, 'danger');
            }
        }

        async function updateMqttUser() {
            const id = document.getElementById('editUserId').value;
            const form = document.getElementById('editMqttUserForm');
            const formData = new FormData(form);
            
            const data = {
                description: formData.get('description') || null,
                allowedPublishTopics: formData.get('allowedPublishTopics') || null,
                allowedSubscribeTopics: formData.get('allowedSubscribeTopics') || null,
                maxConnections: parseInt(formData.get('maxConnections')) || 0,
                isAdmin: document.getElementById('editIsAdmin').checked,
                isActive: document.getElementById('editIsActive').checked
            };

            const newPassword = formData.get('newPassword');
            if (newPassword) {
                data.newPassword = newPassword;
            }

            try {
                const response = await fetch(`/api/mqttusers/${id}`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                if (response.ok) {
                    bootstrap.Modal.getInstance(document.getElementById('editMqttUserModal')).hide();
                    loadMqttUsers();
                    loadMqttUserStats();
                    showAlert('MQTT user updated successfully!', 'success');
                } else {
                    const error = await response.json();
                    showAlert(error.error || 'Failed to update user', 'danger');
                }
            } catch (error) {
                showAlert('Error updating user: ' + error.message, 'danger');
            }
        }

        async function toggleMqttUserActive(id) {
            try {
                const response = await fetch(`/api/mqttusers/${id}/toggle-active`, { method: 'POST' });
                if (response.ok) {
                    loadMqttUsers();
                    loadMqttUserStats();
                    showAlert('User status toggled', 'success');
                }
            } catch (error) {
                showAlert('Error toggling user status', 'danger');
            }
        }

        async function deleteMqttUser(id, username) {
            if (!confirm(`Are you sure you want to delete user "${username}"?`)) return;

            try {
                const response = await fetch(`/api/mqttusers/${id}`, { method: 'DELETE' });
                if (response.ok) {
                    loadMqttUsers();
                    loadMqttUserStats();
                    showAlert('User deleted successfully', 'success');
                }
            } catch (error) {
                showAlert('Error deleting user', 'danger');
            }
        }

        // ========== Monitoring ==========
        // Store previous values for trends
        let previousMetrics = {
            connections: 0,
            messages: 0,
            errors: 0
        };
        let systemStats = null;

        async function loadVerneMQMetrics() {
            const startTime = Date.now();
            try {
                const response = await fetch('/api/system/vernemq-metrics');
                const latency = Date.now() - startTime;
                
                if (response.ok) {
                    const metrics = await response.json();
                    
                    // Update VerneMQ status card
                    updateStatusCard('vernemq', metrics.isOnline);
                    
                    // Webhook API is online if this page loads successfully
                    updateStatusCard('webhook', true);
                    
                    // Update latency display
                    const webhookLatencyEl = document.getElementById('webhookLatency');
                    if (webhookLatencyEl) {
                        webhookLatencyEl.textContent = `Latency: ${latency}ms`;
                    }
                    
                    // Update activity metrics with trends
                    const currentConnections = metrics.activeConnections || 0;
                    const currentMessages = Math.round(metrics.messagesPerMinute || 0);
                    
                    updateMetricWithTrend('mqttConnections', 'connectionsTrend', currentConnections, previousMetrics.connections);
                    updateMetricWithTrend('mqttMessages', 'messagesTrend', currentMessages, previousMetrics.messages);
                    document.getElementById('mqttSubscriptions').textContent = formatNumber(metrics.totalSubscriptions || 0);
                    
                    // Update throughput with bytes
                    document.getElementById('publishRate').textContent = formatNumber(metrics.messagesReceived || 0);
                    document.getElementById('subscribeRate').textContent = formatNumber(metrics.messagesSent || 0);
                    document.getElementById('publishRateBytes').textContent = formatBytes(metrics.bytesReceived || 0);
                    document.getElementById('subscribeRateBytes').textContent = formatBytes(metrics.bytesSent || 0);
                    
                    // Update active sessions
                    const activeSessionsEl = document.getElementById('activeSessionsCount');
                    if (activeSessionsEl) {
                        activeSessionsEl.textContent = formatNumber(currentConnections);
                    }
                    
                    // Store for next comparison
                    previousMetrics.connections = currentConnections;
                    previousMetrics.messages = currentMessages;
                    
                    // Update uptime
                    const uptimeEl = document.getElementById('systemUptime');
                    if (uptimeEl) {
                        uptimeEl.textContent = formatUptime(metrics.timestamp);
                    }
                    
                    // Update last refresh time
                    const lastRefreshEl = document.getElementById('lastRefresh');
                    if (lastRefreshEl) {
                        lastRefreshEl.textContent = 'Last check: ' + new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
                    }
                    
                    // Update signal for latency
                    updateSignalIndicator('signalLatency', latency, [200, 500], `${latency}ms`);
                    
                } else {
                    console.error('Failed to fetch VerneMQ metrics');
                    updateStatusCard('vernemq', false);
                    showCriticalAlert('vernemq-offline', 'VerneMQ Broker Offline', 
                        'Unable to connect to VerneMQ. Check if the broker is running.', 'danger');
                }
            } catch (error) {
                console.error('Error loading VerneMQ metrics:', error);
                updateStatusCard('vernemq', false);
                showCriticalAlert('vernemq-error', 'VerneMQ Connection Error', 
                    error.message, 'danger');
            }
        }

        async function loadSystemStatistics() {
            try {
                const response = await fetch('/api/system/statistics');
                if (response.ok) {
                    systemStats = await response.json();
                    
                    // Update health score
                    updateHealthScore(systemStats.successRate || 0, systemStats.totalExecutions || 0);
                    
                    // Update failed auth count (from recent failures)
                    const failedAuthEl = document.getElementById('failedAuthCount');
                    if (failedAuthEl) {
                        failedAuthEl.textContent = systemStats.failedExecutions || 0;
                    }
                    
                    // Update webhook signal
                    const failureRate = systemStats.totalExecutions > 0 
                        ? ((systemStats.failedExecutions / systemStats.totalExecutions) * 100) 
                        : 0;
                    updateSignalIndicator('signalWebhooks', failureRate, [5, 15], 
                        failureRate > 0 ? `${failureRate.toFixed(1)}% fail` : 'All OK', true);
                    
                    // Update pending queue signal
                    const pendingEl = document.getElementById('signalQueueDetails');
                    if (pendingEl) {
                        const pending = systemStats.pendingExecutions || 0;
                        pendingEl.textContent = pending > 0 ? `${pending} pending` : 'Clear';
                        updateSignalIndicator('signalQueue', pending, [5, 20], 
                            pending > 0 ? `${pending} pending` : 'Clear');
                    }
                    
                    // Update response time signal
                    const avgResponse = systemStats.averageResponseTimeMs || 0;
                    updateSignalIndicator('signalLatency', avgResponse, [500, 2000], 
                        avgResponse > 0 ? `${Math.round(avgResponse)}ms` : '--ms');
                }
            } catch (error) {
                console.error('Error loading system statistics:', error);
            }
        }

        function updateMetricWithTrend(metricId, trendId, current, previous) {
            const metricEl = document.getElementById(metricId);
            const trendEl = document.getElementById(trendId);
            
            if (metricEl) {
                metricEl.textContent = formatNumber(current);
            }
            
            if (trendEl && previous > 0) {
                const diff = current - previous;
                const percentChange = ((diff / previous) * 100).toFixed(0);
                
                if (diff > 0) {
                    trendEl.className = 'metric-trend up';
                    trendEl.innerHTML = `<i class="fas fa-arrow-up"></i> +${percentChange}%`;
                } else if (diff < 0) {
                    trendEl.className = 'metric-trend down';
                    trendEl.innerHTML = `<i class="fas fa-arrow-down"></i> ${percentChange}%`;
                } else {
                    trendEl.className = 'metric-trend neutral';
                    trendEl.innerHTML = `<i class="fas fa-minus"></i> 0%`;
                }
            }
        }

        function updateHealthScore(successRate, totalExecutions) {
            const progressEl = document.getElementById('healthScoreProgress');
            const valueEl = document.getElementById('healthScoreValue');
            const detailsEl = document.getElementById('healthScoreDetails');
            
            if (progressEl && valueEl) {
                const circumference = 2 * Math.PI * 42; // r=42
                const offset = circumference - (successRate / 100) * circumference;
                
                progressEl.style.strokeDashoffset = offset;
                valueEl.textContent = `${Math.round(successRate)}%`;
                
                // Color based on score
                let color = '#10b981'; // green
                if (successRate < 95) color = '#f59e0b'; // warning
                if (successRate < 80) color = '#ef4444'; // danger
                
                progressEl.style.stroke = color;
                valueEl.style.color = color;
            }
            
            if (detailsEl) {
                detailsEl.textContent = totalExecutions > 0 
                    ? `${totalExecutions} total executions`
                    : 'No executions yet';
            }
        }

        function updateSignalIndicator(signalId, value, thresholds, detailText, inverted = false) {
            const signalEl = document.getElementById(signalId);
            const detailsEl = document.getElementById(signalId + 'Details');
            
            if (!signalEl) return;
            
            let status = 'healthy';
            if (inverted) {
                // Higher is worse (e.g., failure rate)
                if (value > thresholds[1]) status = 'critical';
                else if (value > thresholds[0]) status = 'warning';
            } else {
                // Higher is worse for some metrics (e.g., latency)
                if (value > thresholds[1]) status = 'critical';
                else if (value > thresholds[0]) status = 'warning';
            }
            
            signalEl.className = `signal-indicator ${status}`;
            const dotEl = signalEl.querySelector('.signal-dot');
            if (dotEl) {
                dotEl.className = `signal-dot ${status}`;
            }
            
            if (detailsEl && detailText) {
                detailsEl.textContent = detailText;
            }
        }

        function showCriticalAlert(id, title, message, type = 'danger') {
            const container = document.getElementById('criticalAlertsContainer');
            if (!container) return;
            
            // Check if alert already exists
            const existingAlert = document.getElementById(`alert-${id}`);
            if (existingAlert) return;
            
            const alertHtml = `
                <div class="alert-banner ${type === 'warning' ? 'warning' : ''}" id="alert-${id}">
                    <div class="alert-icon ${type === 'danger' ? 'text-danger' : 'text-warning'}">
                        <i class="fas ${type === 'danger' ? 'fa-circle-exclamation' : 'fa-triangle-exclamation'}"></i>
                    </div>
                    <div class="alert-content">
                        <div class="alert-title">${title}</div>
                        <div class="alert-message">${message}</div>
                    </div>
                    <div class="alert-action">
                        <button class="btn btn-sm btn-outline-secondary" onclick="dismissAlert('${id}')">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
            `;
            
            container.insertAdjacentHTML('beforeend', alertHtml);
        }

        function dismissAlert(id) {
            const alert = document.getElementById(`alert-${id}`);
            if (alert) {
                alert.remove();
            }
        }

        function clearAlert(id) {
            const alert = document.getElementById(`alert-${id}`);
            if (alert) {
                alert.remove();
