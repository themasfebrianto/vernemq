@page
@model VerneMQWebhookAuth.Pages.IndexModel
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>VerneMQ Webhook Dashboard</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.0/signalr.min.js"></script>
    <style>
        :root {
            --bg-main: #fafafa;
            --bg-card: #ffffff;
            --border-color: #eaeaea;
            --text-primary: #171717;
            --text-secondary: #666666;
            --text-muted: #888888;
            --accent: #001f3f; /* Dark Navy for a professional look */
            --accent: #000000;
            --accent-hover: #171717;
            --success: #10b981;
            --warning: #f59e0b;
            --danger: #ef4444;
            --info: #3b82f6;
            --radius-md: 8px;
            --radius-lg: 12px;
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            --transition: all 0.2s ease;
        }

        body {
            background-color: var(--bg-main);
            color: var(--text-primary);
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            -webkit-font-smoothing: antialiased;
            letter-spacing: -0.011em;
        }

        /* Layout */
        .dashboard-container {
            max-width: 1240px;
            margin: 0 auto;
            padding: 2rem 1.5rem;
        }

        /* Navbar */
        .navbar {
            background: var(--bg-card) !important;
            border-bottom: 1px solid var(--border-color);
            padding: 0.75rem 0;
            top: 0;
            z-index: 1000;
        }

        .navbar-brand {
            font-weight: 700;
            color: var(--text-primary) !important;
            font-size: 1.1rem;
            letter-spacing: -0.02em;
        }

        /* Tabs */
        .nav-tabs {
            border-bottom: 1px solid var(--border-color);
            margin-bottom: 2rem;
            gap: 1.5rem;
        }

        .nav-tabs .nav-link {
            border: none;
            color: var(--text-secondary);
            font-weight: 500;
            font-size: 0.9rem;
            padding: 0.75rem 0.25rem;
            position: relative;
            background: transparent !important;
            transition: var(--transition);
        }

        .nav-tabs .nav-link:hover {
            color: var(--text-primary);
        }

        .nav-tabs .nav-link.active {
            color: var(--accent);
            border: none;
        }

        .nav-tabs .nav-link.active::after {
            content: '';
            position: absolute;
            bottom: -1px;
            left: 0;
            right: 0;
            height: 2px;
            background: var(--accent);
        }

        /* Stat Cards */
        .stat-card {
            background: var(--bg-card);
            border: 1px solid var(--border-color);
            border-radius: var(--radius-lg);
            padding: 1.5rem;
            height: 100%;
            transition: var(--transition);
        }

        .stat-card:hover {
            border-color: #d1d1d1;
        }

        .stat-label {
            color: var(--text-secondary);
            font-size: 0.85rem;
            font-weight: 500;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .stat-value {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--text-primary);
            letter-spacing: -0.03em;
        }

        /* Cards & Tables */
        .content-card {
            background: var(--bg-card);
            border: 1px solid var(--border-color);
            border-radius: var(--radius-lg);
            overflow: hidden;
            box-shadow: var(--shadow-sm);
        }

        .table {
            margin-bottom: 0;
        }

        .table thead th {
            background: #fafafa;
            color: var(--text-secondary);
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            padding: 1rem 1.5rem;
            border-bottom: 1px solid var(--border-color);
        }

        .table tbody td {
            padding: 1rem 1.5rem;
            vertical-align: middle;
            color: var(--text-primary);
            font-size: 0.9rem;
            border-bottom: 1px solid var(--border-color);
        }

        .table tr:last-child td {
            border-bottom: none;
        }

        /* Badges */
        .badge {
            font-weight: 500;
            font-size: 0.75rem;
            padding: 0.35em 0.65em;
            border-radius: 20px;
        }

        .badge-active {
            background-color: #ecfdf5;
            color: #065f46;
            border: 1px solid #a7f3d0;
        }

        .badge-inactive {
            background-color: #f3f4f6;
            color: #374151;
            border: 1px solid #e5e7eb;
        }

        .badge-admin {
            background-color: #eef2ff;
            color: #3730a3;
            border: 1px solid #c7d2fe;
        }

        /* Buttons & Forms */
        .btn {
            font-weight: 500;
            font-size: 0.875rem;
            padding: 0.5rem 1rem;
            border-radius: var(--radius-md);
            transition: var(--transition);
        }

        .btn-primary {
            background-color: var(--accent);
            border-color: var(--accent);
            color: white !important;
        }

        .btn-primary:hover {
            background-color: #262626;
            border-color: #262626;
        }

        .btn-outline-primary {
            color: var(--accent);
            border-color: var(--border-color);
            background: transparent;
        }

        .btn-outline-primary:hover {
            background-color: #f9f9f9;
            border-color: #d1d1d1;
            color: var(--accent);
        }

        .search-box {
            border: 1px solid var(--border-color);
            background: var(--bg-card);
            font-size: 0.9rem;
            padding-left: 1rem;
            height: 40px;
            transition: var(--transition);
        }

        .search-box:focus {
            outline: none;
            border-color: #a3a3a3;
            box-shadow: 0 0 0 4px rgba(0,0,0,0.03);
        }

        /* Monitoring Specifics */
        .monitoring-card {
            background: var(--bg-card);
            border: 1px solid var(--border-color);
            border-radius: var(--radius-lg);
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .metric-item {
            padding: 1.25rem;
            border-radius: var(--radius-md);
            background: #fcfcfc;
            border: 1px solid var(--border-color);
        }

        .metric-label {
            font-size: 0.75rem;
            color: var(--text-secondary);
            font-weight: 600;
            text-transform: uppercase;
            margin-bottom: 0.5rem;
        }

        .metric-value {
            font-size: 1.5rem;
            font-weight: 700;
            letter-spacing: -0.02em;
        }

        .status-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            display: inline-block;
        }

        .status-dot.connected { background: var(--success); box-shadow: 0 0 8px rgba(16, 185, 129, 0.4); }
        .status-dot.disconnected { background: var(--danger); }

        .grafana-embed {
            border: 1px solid var(--border-color);
            border-radius: var(--radius-md);
            overflow: hidden;
            background: #000;
        }

        /* Modals */
        .modal-content {
            border: none;
            border-radius: var(--radius-lg);
            box-shadow: 0 20px 25px -5px rgba(0,0,0,0.1), 0 10px 10px -5px rgba(0,0,0,0.04);
        }

        .modal-header {
            padding: 1.5rem;
            border-bottom: 1px solid var(--border-color);
            background: white;
            color: var(--text-primary);
        }

        .modal-title {
            font-weight: 700;
            letter-spacing: -0.02em;
        }

        .modal-body {
            padding: 1.5rem;
        }

        .modal-footer {
            padding: 1.25rem 1.5rem;
            border-top: 1px solid var(--border-color);
        }

        .form-label {
            font-weight: 500;
            font-size: 0.875rem;
            margin-bottom: 0.5rem;
            color: var(--text-secondary);
        }

        /* Custom Scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
        }
        ::-webkit-scrollbar-track {
            background: #f1f1f1;
        }
        ::-webkit-scrollbar-thumb {
            background: #d1d1d1;
            border-radius: 4px;
        }
        ::-webkit-scrollbar-thumb:hover {
            background: #a1a1a1;
        }
    </style>
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid px-4 md:px-5">
            <a class="navbar-brand d-flex align-items-center" href="#">
                <span class="me-2" style="background: #000; color: #fff; width: 28px; height: 28px; display: flex; align-items: center; justify-content: center; border-radius: 6px;">
                    <i class="fas fa-bolt" style="font-size: 0.8rem;"></i>
                </span>
                VerneMQ
            </a>
            <div class="ms-auto d-flex align-items-center gap-3">
                <div class="connection-status d-none d-md-flex align-items-center gap-2">
                    <span class="status-dot connected" id="connectionDot"></span>
                    <span id="connectionText" class="small fw-medium">Connected</span>
                </div>
                <button class="btn btn-outline-primary btn-sm" onclick="refreshAllData()">
                    <i class="fas fa-rotate me-1 text-muted"></i> Refresh
                </button>
            </div>
        </div>
    </nav>

    <div class="dashboard-container">
        <!-- Navigation Tabs -->
        <ul class="nav nav-tabs" id="mainTabs" role="tablist">
            <li class="nav-item">
                <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#mqttUsers" type="button">
                    Users
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#webhooks" type="button">
                    Webhooks
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#monitoring" type="button">
                    Monitoring
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#logs" type="button">
                    Logs
                </button>
            </li>
        </ul>

        <!-- Tab Contents -->
        <div class="tab-content">
            <!-- MQTT Users Tab -->
            <div class="tab-pane fade show active" id="mqttUsers">
                <!-- Stats Cards -->
                <div class="row g-4 mb-4">
                    <div class="col-6 col-md-3">
                        <div class="stat-card">
                            <div class="stat-label">
                                <i class="fas fa-users-viewfinder text-muted"></i> Total Users
                            </div>
                            <div class="stat-value" id="totalMqttUsers">0</div>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="stat-card">
                            <div class="stat-label">
                                <i class="fas fa-circle-check text-success"></i> Active
                            </div>
                            <div class="stat-value" id="activeMqttUsers">0</div>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="stat-card">
                            <div class="stat-label">
                                <i class="fas fa-shield-halved text-info"></i> Admins
                            </div>
                            <div class="stat-value" id="adminMqttUsers">0</div>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="stat-card">
                            <div class="stat-label">
                                <i class="fas fa-bolt-lightning text-warning"></i> Logins (24h)
                            </div>
                            <div class="stat-value" id="recentLogins">0</div>
                        </div>
                    </div>
                </div>

                <!-- Users Section -->
                <div class="content-card">
                    <div class="p-4 d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 border-bottom">
                        <div class="d-flex flex-wrap gap-2">
                            <div class="position-relative">
                                <i class="fas fa-search position-absolute top-50 start-0 translate-middle-y ms-3 text-muted" style="font-size: 0.8rem;"></i>
                                <input type="text" class="form-control search-box ps-5" id="mqttUserSearch" 
                                    placeholder="Search users..." style="width: 280px;">
                            </div>
                            <select class="form-select search-box" id="mqttUserFilter" style="width: 140px;">
                                <option value="">All Status</option>
                                <option value="true">Active</option>
                                <option value="false">Inactive</option>
                            </select>
                        </div>
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createMqttUserModal">
                            <i class="fas fa-plus me-2"></i>New User
                        </button>
                    </div>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>User / Client</th>
                                    <th>Description</th>
                                    <th>Status</th>
                                    <th>Role</th>
                                    <th>Last Login</th>
                                    <th>Count</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody id="mqttUserTableBody">
                                <tr>
                                    <td colspan="7" class="text-center py-5">
                                        <div class="spinner-border spinner-border-sm text-muted" role="status"></div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Webhooks Tab -->
            <div class="tab-pane fade" id="webhooks">
                <div class="p-4 bg-white border rounded-3 mb-4 d-flex align-items-center gap-3">
                    <div class="flex-shrink-0 bg-light rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                        <i class="fas fa-link text-muted"></i>
                    </div>
                    <div>
                        <div class="fw-bold">Webhook Management</div>
                        <div class="small text-secondary">Manage your webhooks to integrate VerneMQ events with external services.</div>
                    </div>
                </div>
                <div id="webhookContent">
                    <!-- Webhook content will be loaded here -->
                </div>
            </div>

            <!-- Monitoring Tab -->
            <div class="tab-pane fade" id="monitoring">
                <div class="row g-4">
                    <div class="col-lg-8">
                        <div class="monitoring-card">
                            <h6 class="mb-4 d-flex align-items-center gap-2">
                                <i class="fas fa-server text-muted"></i>
                                VerneMQ Performance
                            </h6>
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <div class="metric-item">
                                        <div class="metric-label">Active Connections</div>
                                        <div class="metric-value" id="mqttConnections">-</div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="metric-item">
                                        <div class="metric-label">Subscriptions</div>
                                        <div class="metric-value" id="mqttSubscriptions">-</div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="metric-item">
                                        <div class="metric-label">Messages / Min</div>
                                        <div class="metric-value" id="mqttMessages">-</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="monitoring-card">
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <h6 class="mb-0 d-flex align-items-center gap-2">
                                    <i class="fas fa-chart-line text-muted"></i>
                                    Live Traffic
                                </h6>
                                <a href="http://localhost:3030/d/vernemq-mqtt/vernemq-mqtt-broker" target="_blank" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-external-link-alt me-1"></i> Grafana
                                </a>
                            </div>
                            
                            <div class="row g-4">
                                <div class="col-12">
                                    <div class="grafana-embed" style="height: 240px;">
                                        <iframe 
                                            src="http://localhost:3030/d-solo/vernemq-mqtt/vernemq-mqtt-broker?orgId=1&panelId=5&theme=dark&refresh=5s"
                                            width="100%" height="240" frameborder="0">
                                        </iframe>
                                    </div>
                                    <div class="mt-2 small text-muted">Message Rate (Publish/Delivery per second)</div>
                                </div>
                                <div class="col-12">
                                    <div class="grafana-embed" style="height: 240px;">
                                        <iframe 
                                            src="http://localhost:3030/d-solo/vernemq-mqtt/vernemq-mqtt-broker?orgId=1&panelId=6&theme=dark&refresh=5s"
                                            width="100%" height="240" frameborder="0">
                                        </iframe>
                                    </div>
                                    <div class="mt-2 small text-muted">Connection Rate (Connect/Disconnect per second)</div>
                                </div>
                            </div>

                            <div class="row g-3 mt-1">
                                <div class="col-md-6">
                                    <div class="metric-item">
                                        <div class="metric-label text-muted">Total Received</div>
                                        <div class="metric-value" id="publishRate" style="font-size: 1.1rem;">-</div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="metric-item">
                                        <div class="metric-label text-muted">Total Sent</div>
                                        <div class="metric-value" id="subscribeRate" style="font-size: 1.1rem;">-</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="monitoring-card">
                            <h6 class="mb-4 d-flex align-items-center gap-2">
                                <i class="fas fa-circle-info text-muted"></i>
                                System Overview
                            </h6>
                            <div class="d-flex flex-column gap-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="small text-secondary fw-medium">VerneMQ Status</span>
                                    <div id="vernemqStatus" class="fw-bold small text-success">
                                        <span class="status-dot connected me-1"></span> Online
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="small text-secondary fw-medium">Webhook Service</span>
                                    <div id="webhookStatus" class="fw-bold small text-success">
                                        <span class="status-dot connected me-1"></span> Online
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="small text-secondary fw-medium">System Uptime</span>
                                    <span id="systemUptime" class="small fw-bold">-</span>
                                </div>
                            </div>
                            
                            <div class="mt-4 pt-4 border-top">
                                <h6 class="mb-3 small text-muted fw-bold text-uppercase" style="letter-spacing: 0.05em; font-size: 0.7rem;">Network Endpoints</h6>
                                <div class="d-flex flex-column gap-2">
                                    <div class="d-flex justify-content-between align-items-center p-2 bg-light rounded">
                                        <span class="small font-monospace">MQTT TCP</span>
                                        <code class="small text-primary">1883</code>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center p-2 bg-light rounded">
                                        <span class="small font-monospace">WebSocket</span>
                                        <code class="small text-primary">8080</code>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center p-2 bg-light rounded">
                                        <span class="small font-monospace">Webhook API</span>
                                        <code class="small text-primary">5000</code>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center p-2 bg-light rounded">
                                        <span class="small font-monospace">Prometheus</span>
                                        <code class="small text-primary">9090</code>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center p-2 bg-light rounded">
                                        <span class="small font-monospace">Grafana</span>
                                        <code class="small text-primary">3030</code>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Logs Tab -->
            <div class="tab-pane fade" id="logs">
                <div class="content-card">
                    <div class="p-4 border-bottom">
                        <h6 class="mb-0 d-flex align-items-center gap-2">
                            <i class="fas fa-list-check text-muted"></i>
                            Recent Webhook Executions
                        </h6>
                    </div>
                    <div id="executionLogsContent" class="table-responsive" style="max-height: 600px; overflow-y: auto;">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Timestamp</th>
                                    <th>Resource</th>
                                    <th>Status</th>
                                    <th>Latency</th>
                                    <th>Origin</th>
                                </tr>
                            </thead>
                            <tbody id="logsTableBody">
                                <tr>
                                    <td colspan="5" class="text-center py-5">
                                        <div class="spinner-border spinner-border-sm text-muted" role="status"></div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Create MQTT User Modal -->
    <div class="modal fade" id="createMqttUserModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="fas fa-user-plus me-2"></i>Create MQTT User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="createMqttUserForm">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Username *</label>
                                <input type="text" class="form-control" name="username" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Password * (min 8 chars)</label>
                                <input type="password" class="form-control" name="password" required minlength="8">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <input type="text" class="form-control" name="description" 
                                placeholder="e.g., Temperature Sensor #1">
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Allowed Client ID (optional)</label>
                                <input type="text" class="form-control" name="allowedClientId" 
                                    placeholder="Leave empty to allow any">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Max Connections</label>
                                <input type="number" class="form-control" name="maxConnections" value="0" min="0">
                                <small class="text-muted">0 = unlimited</small>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Allowed Publish Topics</label>
                            <input type="text" class="form-control" name="allowedPublishTopics" 
                                placeholder="e.g., sensors/#,devices/+/status (empty = all topics)">
                            <small class="text-muted">Comma-separated. Use + for single-level, # for multi-level wildcard</small>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Allowed Subscribe Topics</label>
                            <input type="text" class="form-control" name="allowedSubscribeTopics" 
                                placeholder="e.g., commands/#,broadcast/# (empty = all topics)">
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" name="isAdmin" id="isAdminCheck">
                            <label class="form-check-label" for="isAdminCheck">
                                Admin user (can access admin/* topics)
                            </label>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="createMqttUser()">
                        <i class="fas fa-save me-2"></i>Create User
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit MQTT User Modal -->
    <div class="modal fade" id="editMqttUserModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="fas fa-user-edit me-2"></i>Edit MQTT User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="editMqttUserForm">
                        <input type="hidden" name="id" id="editUserId">
                        <div class="mb-3">
                            <label class="form-label">Username</label>
                            <input type="text" class="form-control" id="editUsername" readonly disabled>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <input type="text" class="form-control" name="description" id="editDescription">
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">New Password (leave empty to keep)</label>
                                <input type="password" class="form-control" name="newPassword" minlength="8">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Max Connections</label>
                                <input type="number" class="form-control" name="maxConnections" id="editMaxConnections" min="0">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Allowed Publish Topics</label>
                            <input type="text" class="form-control" name="allowedPublishTopics" id="editPublishTopics">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Allowed Subscribe Topics</label>
                            <input type="text" class="form-control" name="allowedSubscribeTopics" id="editSubscribeTopics">
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" name="isAdmin" id="editIsAdmin">
                                    <label class="form-check-label" for="editIsAdmin">Admin user</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" name="isActive" id="editIsActive">
                                    <label class="form-check-label" for="editIsActive">Active</label>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="updateMqttUser()">
                        <i class="fas fa-save me-2"></i>Save Changes
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // ========== MQTT User Management ==========
        let mqttUsers = [];

        async function loadMqttUsers() {
            try {
                const search = document.getElementById('mqttUserSearch').value;
                const activeOnly = document.getElementById('mqttUserFilter').value;
                
                let url = '/api/mqttusers?';
                if (search) url += `search=${encodeURIComponent(search)}&`;
                if (activeOnly) url += `activeOnly=${activeOnly}&`;
                
                const response = await fetch(url);
                if (response.ok) {
                    const data = await response.json();
                    mqttUsers = data.items || [];
                    displayMqttUsers();
                }
            } catch (error) {
                console.error('Error loading MQTT users:', error);
                showAlert('Error loading MQTT users', 'danger');
            }
        }

        async function loadMqttUserStats() {
            try {
                const response = await fetch('/api/mqttusers/stats');
                if (response.ok) {
                    const stats = await response.json();
                    document.getElementById('totalMqttUsers').textContent = stats.totalUsers;
                    document.getElementById('activeMqttUsers').textContent = stats.activeUsers;
                    document.getElementById('adminMqttUsers').textContent = stats.adminUsers;
                    document.getElementById('recentLogins').textContent = stats.recentLogins24h;
                }
            } catch (error) {
                console.error('Error loading stats:', error);
            }
        }

        function displayMqttUsers() {
            const tbody = document.getElementById('mqttUserTableBody');
            
            if (mqttUsers.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="7" class="text-center py-5 text-muted">
                            <i class="fas fa-users-slash fa-2x mb-3 d-block opacity-20"></i>
                            No MQTT users found
                        </td>
                    </tr>
                `;
                return;
            }

            tbody.innerHTML = mqttUsers.map(user => `
                <tr>
                    <td>
                        <div class="fw-bold text-dark">${user.username}</div>
                        ${user.allowedClientId ? `<div class="small text-muted mt-1 font-monospace">${user.allowedClientId}</div>` : ''}
                    </td>
                    <td class="small text-secondary">${user.description || '<span class="text-muted">–</span>'}</td>
                    <td>
                        <span class="badge ${user.isActive ? 'badge-active' : 'badge-inactive'}">
                            ${user.isActive ? 'Active' : 'Inactive'}
                        </span>
                    </td>
                    <td>
                        ${user.isAdmin ? '<span class="badge badge-admin">Admin</span>' : '<span class="text-muted small">Standard</span>'}
                    </td>
                    <td>
                        <div class="small fw-medium">${user.lastLoginAt ? new Date(user.lastLoginAt).toLocaleString([], { dateStyle: 'short', timeStyle: 'short' }) : '<span class="text-muted">Never</span>'}</div>
                        ${user.lastLoginIp ? `<div class="small text-muted font-monospace" style="font-size: 0.7rem;">${user.lastLoginIp}</div>` : ''}
                    </td>
                    <td class="small fw-bold text-center">${user.loginCount}</td>
                    <td>
                        <div class="d-flex justify-content-end gap-1">
                            <button class="btn btn-outline-primary btn-sm px-2" onclick="editMqttUser(${user.id})" title="Edit">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn btn-outline-${user.isActive ? 'warning' : 'success'} btn-sm px-2" 
                                onclick="toggleMqttUserActive(${user.id})" title="${user.isActive ? 'Deactivate' : 'Activate'}">
                                <i class="fas fa-${user.isActive ? 'pause' : 'play'}"></i>
                            </button>
                            <button class="btn btn-outline-danger btn-sm px-2" onclick="deleteMqttUser(${user.id}, '${user.username}')" title="Delete">
                                <i class="fas fa-trash-can"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            `).join('');
        }

        async function createMqttUser() {
            const form = document.getElementById('createMqttUserForm');
            const formData = new FormData(form);
            const data = {
                username: formData.get('username'),
                password: formData.get('password'),
                description: formData.get('description') || null,
                allowedClientId: formData.get('allowedClientId') || null,
                allowedPublishTopics: formData.get('allowedPublishTopics') || null,
                allowedSubscribeTopics: formData.get('allowedSubscribeTopics') || null,
                maxConnections: parseInt(formData.get('maxConnections')) || 0,
                isAdmin: formData.get('isAdmin') === 'on'
            };

            try {
                const response = await fetch('/api/mqttusers', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                if (response.ok) {
                    bootstrap.Modal.getInstance(document.getElementById('createMqttUserModal')).hide();
                    form.reset();
                    loadMqttUsers();
                    loadMqttUserStats();
                    showAlert('MQTT user created successfully!', 'success');
                } else {
                    const error = await response.json();
                    showAlert(error.error || 'Failed to create user', 'danger');
                }
            } catch (error) {
                showAlert('Error creating user: ' + error.message, 'danger');
            }
        }

        async function editMqttUser(id) {
            try {
                const response = await fetch(`/api/mqttusers/${id}`);
                if (response.ok) {
                    const user = await response.json();
                    document.getElementById('editUserId').value = user.id;
                    document.getElementById('editUsername').value = user.username;
                    document.getElementById('editDescription').value = user.description || '';
                    document.getElementById('editMaxConnections').value = user.maxConnections;
                    document.getElementById('editPublishTopics').value = user.allowedPublishTopics || '';
                    document.getElementById('editSubscribeTopics').value = user.allowedSubscribeTopics || '';
                    document.getElementById('editIsAdmin').checked = user.isAdmin;
                    document.getElementById('editIsActive').checked = user.isActive;
                    
                    new bootstrap.Modal(document.getElementById('editMqttUserModal')).show();
                }
            } catch (error) {
                showAlert('Error loading user: ' + error.message, 'danger');
            }
        }

        async function updateMqttUser() {
            const id = document.getElementById('editUserId').value;
            const form = document.getElementById('editMqttUserForm');
            const formData = new FormData(form);
            
            const data = {
                description: formData.get('description') || null,
                allowedPublishTopics: formData.get('allowedPublishTopics') || null,
                allowedSubscribeTopics: formData.get('allowedSubscribeTopics') || null,
                maxConnections: parseInt(formData.get('maxConnections')) || 0,
                isAdmin: document.getElementById('editIsAdmin').checked,
                isActive: document.getElementById('editIsActive').checked
            };

            const newPassword = formData.get('newPassword');
            if (newPassword) {
                data.newPassword = newPassword;
            }

            try {
                const response = await fetch(`/api/mqttusers/${id}`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                if (response.ok) {
                    bootstrap.Modal.getInstance(document.getElementById('editMqttUserModal')).hide();
                    loadMqttUsers();
                    loadMqttUserStats();
                    showAlert('MQTT user updated successfully!', 'success');
                } else {
                    const error = await response.json();
                    showAlert(error.error || 'Failed to update user', 'danger');
                }
            } catch (error) {
                showAlert('Error updating user: ' + error.message, 'danger');
            }
        }

        async function toggleMqttUserActive(id) {
            try {
                const response = await fetch(`/api/mqttusers/${id}/toggle-active`, { method: 'POST' });
                if (response.ok) {
                    loadMqttUsers();
                    loadMqttUserStats();
                    showAlert('User status toggled', 'success');
                }
            } catch (error) {
                showAlert('Error toggling user status', 'danger');
            }
        }

        async function deleteMqttUser(id, username) {
            if (!confirm(`Are you sure you want to delete user "${username}"?`)) return;

            try {
                const response = await fetch(`/api/mqttusers/${id}`, { method: 'DELETE' });
                if (response.ok) {
                    loadMqttUsers();
                    loadMqttUserStats();
                    showAlert('User deleted successfully', 'success');
                }
            } catch (error) {
                showAlert('Error deleting user', 'danger');
            }
        }

        // ========== Monitoring ==========
        async function loadVerneMQMetrics() {
            try {
                const response = await fetch('/api/system/vernemq-metrics');
                if (response.ok) {
                    const metrics = await response.json();
                    
                    // Update VerneMQ status
                    const statusEl = document.getElementById('vernemqStatus');
                    if (metrics.isOnline) {
                        statusEl.innerHTML = '<span class="status-dot connected me-1"></span> Online';
                        statusEl.className = 'fw-bold small text-success';
                    } else {
                        statusEl.innerHTML = '<span class="status-dot disconnected me-1"></span> Offline';
                        statusEl.className = 'fw-bold small text-danger';
                    }
                    
                    // Update metrics
                    document.getElementById('mqttConnections').textContent = metrics.activeConnections || 0;
                    document.getElementById('mqttSubscriptions').textContent = metrics.totalSubscriptions || 0;
                    document.getElementById('mqttMessages').textContent = Math.round(metrics.messagesPerMinute || 0);
                    document.getElementById('publishRate').textContent = (metrics.messagesReceived / 60).toFixed(1);
                    document.getElementById('subscribeRate').textContent = (metrics.messagesSent / 60).toFixed(1);
                    
                    // Update uptime
                    const uptimeEl = document.getElementById('systemUptime');
                    if (uptimeEl) {
                        uptimeEl.textContent = formatUptime(metrics.timestamp);
                    }
                } else {
                    console.error('Failed to fetch VerneMQ metrics');
                }
            } catch (error) {
                console.error('Error loading VerneMQ metrics:', error);
                // Mark as offline on error
                const statusEl = document.getElementById('vernemqStatus');
                if (statusEl) {
                    statusEl.innerHTML = '<span class="status-dot disconnected me-1"></span> Error';
                    statusEl.className = 'fw-bold small text-danger';
                }
            }
        }

        function formatUptime(timestamp) {
            const now = new Date();
            const start = new Date(timestamp);
            const diff = Math.floor((now - start) / 1000);
            
            if (diff < 60) return `${diff}s`;
            if (diff < 3600) return `${Math.floor(diff / 60)}m`;
            if (diff < 86400) return `${Math.floor(diff / 3600)}h ${Math.floor((diff % 3600) / 60)}m`;
            return `${Math.floor(diff / 86400)}d ${Math.floor((diff % 86400) / 3600)}h`;
        }

        async function loadExecutionLogs() {
            try {
                const response = await fetch('/api/webhookmanagement/logs?pageSize=20');
                if (response.ok) {
                    const data = await response.json();
                    displayExecutionLogs(data.items || []);
                }
            } catch (error) {
                console.error('Error loading logs:', error);
            }
        }

        function displayExecutionLogs(logs) {
            const tbody = document.getElementById('logsTableBody');
            
            if (logs.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="5" class="text-center py-5 text-muted">No execution logs</td>
                    </tr>
                `;
                return;
            }

            tbody.innerHTML = logs.map(log => `
                <tr>
                    <td class="small fw-medium">${new Date(log.executionTime).toLocaleString([], { dateStyle: 'short', timeStyle: 'short' })}</td>
                    <td class="small font-monospace text-secondary">#${log.webhookId || log.id}</td>
                    <td><span class="badge ${log.status === 'Success' ? 'badge-active' : 'badge-inactive'}">${log.status}</span></td>
                    <td class="small text-secondary">${log.responseTimeMs ? log.responseTimeMs + 'ms' : '–'}</td>
                    <td class="small text-secondary">${log.triggeredBy || '–'}</td>
                </tr>
            `).join('');
        }

        function getStatusColor(status) {
            const s = (status || '').toLowerCase();
            if (s === 'success') return 'success';
            if (s === 'failed') return 'danger';
            if (s === 'pending') return 'warning';
            if (s === 'timeout') return 'warning';
            return 'secondary';
        }

        // ========== Utilities ==========
        function showAlert(message, type) {
            const alert = document.createElement('div');
            alert.className = `alert alert-${type} shadow-lg border-0 d-flex align-items-center gap-3 fade show position-fixed`;
            alert.style.cssText = 'bottom: 24px; right: 24px; z-index: 9999; min-width: 320px; border-radius: 12px; padding: 1rem 1.25rem;';
            
            const icon = type === 'success' ? 'fa-circle-check' : 'fa-circle-exclamation';
            
            alert.innerHTML = `
                <i class="fas ${icon} fa-lg"></i>
                <div class="flex-grow-1 fw-medium">${message}</div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" style="filter: grayscale(1) invert(0.5);"></button>
            `;
            document.body.appendChild(alert);
            setTimeout(() => {
                if (alert.parentElement) {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }
            }, 4000);
        }

        function refreshAllData() {
            loadMqttUsers();
            loadMqttUserStats();
            loadExecutionLogs();
            loadVerneMQMetrics();
        }

        // ========== Event Listeners ==========
        document.addEventListener('DOMContentLoaded', function() {
            loadMqttUsers();
            loadMqttUserStats();
            loadExecutionLogs();
            loadVerneMQMetrics();

            // Search and filter handlers
            document.getElementById('mqttUserSearch').addEventListener('input', 
                debounce(loadMqttUsers, 300));
            document.getElementById('mqttUserFilter').addEventListener('change', loadMqttUsers);
        });

        function debounce(func, wait) {
            let timeout;
            return function executedFunction(...args) {
                clearTimeout(timeout);
                timeout = setTimeout(() => func.apply(this, args), wait);
            };
        }
    </script>
