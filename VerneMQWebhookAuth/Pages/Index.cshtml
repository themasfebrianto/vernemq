@page
@model VerneMQWebhookAuth.Pages.IndexModel
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>VerneMQ Webhook Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.0/signalr.min.js"></script>
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --success-gradient: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
            --warning-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            --info-gradient: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        }

        body {
            background: #f8f9fc;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar {
            background: var(--primary-gradient) !important;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .nav-tabs .nav-link {
            border: none;
            color: #6c757d;
            font-weight: 500;
            padding: 1rem 1.5rem;
        }

        .nav-tabs .nav-link.active {
            color: #667eea;
            border-bottom: 3px solid #667eea;
            background: transparent;
        }

        .stat-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            overflow: hidden;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
        }

        .stat-card.primary { background: var(--primary-gradient); }
        .stat-card.success { background: var(--success-gradient); }
        .stat-card.warning { background: var(--warning-gradient); }
        .stat-card.info { background: var(--info-gradient); }

        .stat-card .card-body {
            color: white;
        }

        .stat-card .stat-value {
            font-size: 2.5rem;
            font-weight: 700;
        }

        .stat-card .stat-label {
            opacity: 0.9;
            font-size: 0.9rem;
        }

        .data-table {
            background: white;
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            overflow: hidden;
        }

        .data-table .table {
            margin: 0;
        }

        .data-table .table thead th {
            background: #f8f9fc;
            border: none;
            font-weight: 600;
            color: #495057;
            padding: 1rem;
        }

        .data-table .table tbody td {
            padding: 1rem;
            vertical-align: middle;
            border-color: #f1f1f1;
        }

        .badge-active {
            background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        }

        .badge-inactive {
            background: #6c757d;
        }

        .badge-admin {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .btn-action {
            padding: 0.4rem 0.8rem;
            border-radius: 8px;
            font-size: 0.85rem;
        }

        .search-box {
            border-radius: 10px;
            border: 2px solid #e9ecef;
            padding: 0.75rem 1rem;
            transition: border-color 0.3s;
        }

        .search-box:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .modal-header {
            background: var(--primary-gradient);
            color: white;
            border: none;
        }

        .modal-header .btn-close {
            filter: brightness(0) invert(1);
        }

        .form-control, .form-select {
            border-radius: 8px;
            padding: 0.75rem 1rem;
        }

        .monitoring-card {
            background: white;
            border-radius: 15px;
            padding: 1.5rem;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }

        .metric-item {
            padding: 1rem;
            border-radius: 10px;
            background: #f8f9fc;
            margin-bottom: 0.5rem;
        }

        .metric-item .metric-value {
            font-size: 1.5rem;
            font-weight: 700;
            color: #667eea;
        }

        .metric-item .metric-label {
            color: #6c757d;
            font-size: 0.85rem;
        }

        .connection-status {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .status-dot {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            animation: pulse 2s infinite;
        }

        .status-dot.connected { background: #38ef7d; }
        .status-dot.disconnected { background: #f5576c; }

        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }

        .alert-panel {
            border-left: 4px solid;
            border-radius: 8px;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <i class="fas fa-broadcast-tower me-2"></i>
                VerneMQ Webhook Dashboard
            </a>
            <div class="navbar-nav ms-auto">
                <span class="nav-item connection-status text-white">
                    <span class="status-dot connected" id="connectionDot"></span>
                    <span id="connectionText">Connected</span>
                </span>
                <button class="btn btn-outline-light btn-sm ms-3" onclick="refreshAllData()">
                    <i class="fas fa-sync-alt"></i> Refresh
                </button>
            </div>
        </div>
    </nav>

    <div class="container-fluid mt-4">
        <!-- Navigation Tabs -->
        <ul class="nav nav-tabs mb-4" id="mainTabs" role="tablist">
            <li class="nav-item">
                <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#mqttUsers" type="button">
                    <i class="fas fa-users me-2"></i>MQTT Users
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#webhooks" type="button">
                    <i class="fas fa-link me-2"></i>Webhooks
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#monitoring" type="button">
                    <i class="fas fa-chart-line me-2"></i>Monitoring
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#logs" type="button">
                    <i class="fas fa-history me-2"></i>Logs
                </button>
            </li>
        </ul>

        <!-- Tab Contents -->
        <div class="tab-content">
            <!-- MQTT Users Tab -->
            <div class="tab-pane fade show active" id="mqttUsers">
                <!-- Stats Cards -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="stat-card primary">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <div class="stat-value" id="totalMqttUsers">0</div>
                                        <div class="stat-label">Total Users</div>
                                    </div>
                                    <i class="fas fa-users fa-2x opacity-50"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-card success">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <div class="stat-value" id="activeMqttUsers">0</div>
                                        <div class="stat-label">Active Users</div>
                                    </div>
                                    <i class="fas fa-user-check fa-2x opacity-50"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-card info">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <div class="stat-value" id="adminMqttUsers">0</div>
                                        <div class="stat-label">Admin Users</div>
                                    </div>
                                    <i class="fas fa-user-shield fa-2x opacity-50"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-card warning">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <div class="stat-value" id="recentLogins">0</div>
                                        <div class="stat-label">Logins (24h)</div>
                                    </div>
                                    <i class="fas fa-sign-in-alt fa-2x opacity-50"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Users Table -->
                <div class="data-table">
                    <div class="p-3 d-flex justify-content-between align-items-center border-bottom">
                        <div class="d-flex gap-2">
                            <input type="text" class="form-control search-box" id="mqttUserSearch" 
                                placeholder="Search users..." style="width: 300px;">
                            <select class="form-select" id="mqttUserFilter" style="width: 150px;">
                                <option value="">All Status</option>
                                <option value="true">Active</option>
                                <option value="false">Inactive</option>
                            </select>
                        </div>
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createMqttUserModal">
                            <i class="fas fa-plus me-2"></i>Add User
                        </button>
                    </div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Username</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Role</th>
                                <th>Last Login</th>
                                <th>Login Count</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="mqttUserTableBody">
                            <tr>
                                <td colspan="7" class="text-center py-4">
                                    <div class="spinner-border text-primary" role="status"></div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Webhooks Tab -->
            <div class="tab-pane fade" id="webhooks">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    Webhook management is available. Create webhooks to integrate with external services.
                </div>
                <div id="webhookContent">
                    <!-- Webhook content will be loaded here -->
                </div>
            </div>

            <!-- Monitoring Tab -->
            <div class="tab-pane fade" id="monitoring">
                <div class="row">
                    <div class="col-md-8">
                        <div class="monitoring-card mb-4">
                            <h5 class="mb-4"><i class="fas fa-server me-2"></i>VerneMQ Status</h5>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="metric-item">
                                        <div class="metric-value" id="mqttConnections">-</div>
                                        <div class="metric-label">Active Connections</div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="metric-item">
                                        <div class="metric-value" id="mqttSubscriptions">-</div>
                                        <div class="metric-label">Subscriptions</div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="metric-item">
                                        <div class="metric-value" id="mqttMessages">-</div>
                                        <div class="metric-label">Messages/min</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="monitoring-card">
                            <h5 class="mb-4"><i class="fas fa-chart-bar me-2"></i>Traffic Metrics</h5>
                            <div class="alert alert-panel alert-info">
                                <h6><i class="fas fa-lightbulb me-2"></i>Best Practice: Prometheus + Grafana</h6>
                                <p class="mb-2">For production monitoring, integrate VerneMQ with:</p>
                                <ul class="mb-0">
                                    <li><strong>Prometheus</strong> - Metrics collection (VerneMQ exposes metrics on port 8888)</li>
                                    <li><strong>Grafana</strong> - Beautiful dashboards and alerting</li>
                                </ul>
                                <hr>
                                <p class="mb-1"><strong>Quick Setup:</strong></p>
                                <code>curl http://localhost:8888/metrics</code>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-6">
                                    <div class="metric-item">
                                        <div class="metric-value" id="publishRate">-</div>
                                        <div class="metric-label">Publish Rate/sec</div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="metric-item">
                                        <div class="metric-value" id="subscribeRate">-</div>
                                        <div class="metric-label">Subscribe Rate/sec</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="monitoring-card">
                            <h5 class="mb-4"><i class="fas fa-cogs me-2"></i>System Info</h5>
                            <div class="metric-item mb-2">
                                <div class="metric-label">VerneMQ Status</div>
                                <div class="metric-value text-success" id="vernemqStatus">
                                    <i class="fas fa-circle me-1" style="font-size: 0.5rem;"></i> Online
                                </div>
                            </div>
                            <div class="metric-item mb-2">
                                <div class="metric-label">Webhook Service</div>
                                <div class="metric-value text-success" id="webhookStatus">
                                    <i class="fas fa-circle me-1" style="font-size: 0.5rem;"></i> Online
                                </div>
                            </div>
                            <div class="metric-item mb-2">
                                <div class="metric-label">Uptime</div>
                                <div class="metric-value" id="systemUptime">-</div>
                            </div>
                            <hr>
                            <h6 class="mb-3">Endpoints</h6>
                            <ul class="list-unstyled small">
                                <li class="mb-2"><code>:1883</code> - MQTT TCP</li>
                                <li class="mb-2"><code>:8080</code> - WebSocket</li>
                                <li class="mb-2"><code>:8888</code> - Metrics</li>
                                <li class="mb-2"><code>:5000</code> - Webhook API</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Logs Tab -->
            <div class="tab-pane fade" id="logs">
                <div class="data-table">
                    <div class="p-3 border-bottom">
                        <h5 class="mb-0"><i class="fas fa-history me-2"></i>Recent Webhook Executions</h5>
                    </div>
                    <div id="executionLogsContent" style="max-height: 500px; overflow-y: auto;">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Time</th>
                                    <th>Webhook</th>
                                    <th>Status</th>
                                    <th>Response Time</th>
                                    <th>Triggered By</th>
                                </tr>
                            </thead>
                            <tbody id="logsTableBody">
                                <tr>
                                    <td colspan="5" class="text-center py-4">
                                        <div class="spinner-border text-primary" role="status"></div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Create MQTT User Modal -->
    <div class="modal fade" id="createMqttUserModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="fas fa-user-plus me-2"></i>Create MQTT User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="createMqttUserForm">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Username *</label>
                                <input type="text" class="form-control" name="username" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Password * (min 8 chars)</label>
                                <input type="password" class="form-control" name="password" required minlength="8">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <input type="text" class="form-control" name="description" 
                                placeholder="e.g., Temperature Sensor #1">
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Allowed Client ID (optional)</label>
                                <input type="text" class="form-control" name="allowedClientId" 
                                    placeholder="Leave empty to allow any">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Max Connections</label>
                                <input type="number" class="form-control" name="maxConnections" value="0" min="0">
                                <small class="text-muted">0 = unlimited</small>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Allowed Publish Topics</label>
                            <input type="text" class="form-control" name="allowedPublishTopics" 
                                placeholder="e.g., sensors/#,devices/+/status (empty = all topics)">
                            <small class="text-muted">Comma-separated. Use + for single-level, # for multi-level wildcard</small>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Allowed Subscribe Topics</label>
                            <input type="text" class="form-control" name="allowedSubscribeTopics" 
                                placeholder="e.g., commands/#,broadcast/# (empty = all topics)">
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" name="isAdmin" id="isAdminCheck">
                            <label class="form-check-label" for="isAdminCheck">
                                Admin user (can access admin/* topics)
                            </label>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="createMqttUser()">
                        <i class="fas fa-save me-2"></i>Create User
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit MQTT User Modal -->
    <div class="modal fade" id="editMqttUserModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="fas fa-user-edit me-2"></i>Edit MQTT User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="editMqttUserForm">
                        <input type="hidden" name="id" id="editUserId">
                        <div class="mb-3">
                            <label class="form-label">Username</label>
                            <input type="text" class="form-control" id="editUsername" readonly disabled>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <input type="text" class="form-control" name="description" id="editDescription">
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">New Password (leave empty to keep)</label>
                                <input type="password" class="form-control" name="newPassword" minlength="8">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Max Connections</label>
                                <input type="number" class="form-control" name="maxConnections" id="editMaxConnections" min="0">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Allowed Publish Topics</label>
                            <input type="text" class="form-control" name="allowedPublishTopics" id="editPublishTopics">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Allowed Subscribe Topics</label>
                            <input type="text" class="form-control" name="allowedSubscribeTopics" id="editSubscribeTopics">
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" name="isAdmin" id="editIsAdmin">
                                    <label class="form-check-label" for="editIsAdmin">Admin user</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" name="isActive" id="editIsActive">
                                    <label class="form-check-label" for="editIsActive">Active</label>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="updateMqttUser()">
                        <i class="fas fa-save me-2"></i>Save Changes
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // ========== MQTT User Management ==========
        let mqttUsers = [];

        async function loadMqttUsers() {
            try {
                const search = document.getElementById('mqttUserSearch').value;
                const activeOnly = document.getElementById('mqttUserFilter').value;
                
                let url = '/api/mqttusers?';
                if (search) url += `search=${encodeURIComponent(search)}&`;
                if (activeOnly) url += `activeOnly=${activeOnly}&`;
                
                const response = await fetch(url);
                if (response.ok) {
                    const data = await response.json();
                    mqttUsers = data.items || [];
                    displayMqttUsers();
                }
            } catch (error) {
                console.error('Error loading MQTT users:', error);
                showAlert('Error loading MQTT users', 'danger');
            }
        }

        async function loadMqttUserStats() {
            try {
                const response = await fetch('/api/mqttusers/stats');
                if (response.ok) {
                    const stats = await response.json();
                    document.getElementById('totalMqttUsers').textContent = stats.totalUsers;
                    document.getElementById('activeMqttUsers').textContent = stats.activeUsers;
                    document.getElementById('adminMqttUsers').textContent = stats.adminUsers;
                    document.getElementById('recentLogins').textContent = stats.recentLogins24h;
                }
            } catch (error) {
                console.error('Error loading stats:', error);
            }
        }

        function displayMqttUsers() {
            const tbody = document.getElementById('mqttUserTableBody');
            
            if (mqttUsers.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="7" class="text-center py-4 text-muted">
                            <i class="fas fa-users fa-3x mb-3 d-block"></i>
                            No MQTT users found
                        </td>
                    </tr>
                `;
                return;
            }

            tbody.innerHTML = mqttUsers.map(user => `
                <tr>
                    <td>
                        <strong>${user.username}</strong>
                        ${user.allowedClientId ? `<br><small class="text-muted">Client: ${user.allowedClientId}</small>` : ''}
                    </td>
                    <td>${user.description || '<span class="text-muted">-</span>'}</td>
                    <td>
                        <span class="badge ${user.isActive ? 'badge-active' : 'badge-inactive'}">
                            ${user.isActive ? 'Active' : 'Inactive'}
                        </span>
                    </td>
                    <td>
                        ${user.isAdmin ? '<span class="badge badge-admin">Admin</span>' : '<span class="text-muted">User</span>'}
                    </td>
                    <td>
                        ${user.lastLoginAt ? new Date(user.lastLoginAt).toLocaleString() : '<span class="text-muted">Never</span>'}
                        ${user.lastLoginIp ? `<br><small class="text-muted">${user.lastLoginIp}</small>` : ''}
                    </td>
                    <td>${user.loginCount}</td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <button class="btn btn-outline-primary btn-action" onclick="editMqttUser(${user.id})">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn btn-outline-${user.isActive ? 'warning' : 'success'} btn-action" 
                                onclick="toggleMqttUserActive(${user.id})">
                                <i class="fas fa-${user.isActive ? 'pause' : 'play'}"></i>
                            </button>
                            <button class="btn btn-outline-danger btn-action" onclick="deleteMqttUser(${user.id}, '${user.username}')">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            `).join('');
        }

        async function createMqttUser() {
            const form = document.getElementById('createMqttUserForm');
            const formData = new FormData(form);
            const data = {
                username: formData.get('username'),
                password: formData.get('password'),
                description: formData.get('description') || null,
                allowedClientId: formData.get('allowedClientId') || null,
                allowedPublishTopics: formData.get('allowedPublishTopics') || null,
                allowedSubscribeTopics: formData.get('allowedSubscribeTopics') || null,
                maxConnections: parseInt(formData.get('maxConnections')) || 0,
                isAdmin: formData.get('isAdmin') === 'on'
            };

            try {
                const response = await fetch('/api/mqttusers', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                if (response.ok) {
                    bootstrap.Modal.getInstance(document.getElementById('createMqttUserModal')).hide();
                    form.reset();
                    loadMqttUsers();
                    loadMqttUserStats();
                    showAlert('MQTT user created successfully!', 'success');
                } else {
                    const error = await response.json();
                    showAlert(error.error || 'Failed to create user', 'danger');
                }
            } catch (error) {
                showAlert('Error creating user: ' + error.message, 'danger');
            }
        }

        async function editMqttUser(id) {
            try {
                const response = await fetch(`/api/mqttusers/${id}`);
                if (response.ok) {
                    const user = await response.json();
                    document.getElementById('editUserId').value = user.id;
                    document.getElementById('editUsername').value = user.username;
                    document.getElementById('editDescription').value = user.description || '';
                    document.getElementById('editMaxConnections').value = user.maxConnections;
                    document.getElementById('editPublishTopics').value = user.allowedPublishTopics || '';
                    document.getElementById('editSubscribeTopics').value = user.allowedSubscribeTopics || '';
                    document.getElementById('editIsAdmin').checked = user.isAdmin;
                    document.getElementById('editIsActive').checked = user.isActive;
                    
                    new bootstrap.Modal(document.getElementById('editMqttUserModal')).show();
                }
            } catch (error) {
                showAlert('Error loading user: ' + error.message, 'danger');
            }
        }

        async function updateMqttUser() {
            const id = document.getElementById('editUserId').value;
            const form = document.getElementById('editMqttUserForm');
            const formData = new FormData(form);
            
            const data = {
                description: formData.get('description') || null,
                allowedPublishTopics: formData.get('allowedPublishTopics') || null,
                allowedSubscribeTopics: formData.get('allowedSubscribeTopics') || null,
                maxConnections: parseInt(formData.get('maxConnections')) || 0,
                isAdmin: document.getElementById('editIsAdmin').checked,
                isActive: document.getElementById('editIsActive').checked
            };

            const newPassword = formData.get('newPassword');
            if (newPassword) {
                data.newPassword = newPassword;
            }

            try {
                const response = await fetch(`/api/mqttusers/${id}`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                if (response.ok) {
                    bootstrap.Modal.getInstance(document.getElementById('editMqttUserModal')).hide();
                    loadMqttUsers();
                    loadMqttUserStats();
                    showAlert('MQTT user updated successfully!', 'success');
                } else {
                    const error = await response.json();
                    showAlert(error.error || 'Failed to update user', 'danger');
                }
            } catch (error) {
                showAlert('Error updating user: ' + error.message, 'danger');
            }
        }

        async function toggleMqttUserActive(id) {
            try {
                const response = await fetch(`/api/mqttusers/${id}/toggle-active`, { method: 'POST' });
                if (response.ok) {
                    loadMqttUsers();
                    loadMqttUserStats();
                    showAlert('User status toggled', 'success');
                }
            } catch (error) {
                showAlert('Error toggling user status', 'danger');
            }
        }

        async function deleteMqttUser(id, username) {
            if (!confirm(`Are you sure you want to delete user "${username}"?`)) return;

            try {
                const response = await fetch(`/api/mqttusers/${id}`, { method: 'DELETE' });
                if (response.ok) {
                    loadMqttUsers();
                    loadMqttUserStats();
                    showAlert('User deleted successfully', 'success');
                }
            } catch (error) {
                showAlert('Error deleting user', 'danger');
            }
        }

        // ========== Monitoring ==========
        async function loadVerneMQMetrics() {
            // Note: In production, VerneMQ metrics would be fetched from Prometheus
            // For now, we'll show placeholder data or try to fetch from VerneMQ status endpoint
            try {
                // Try to fetch from VerneMQ status endpoint (if accessible)
                // This might fail due to CORS, which is expected
                document.getElementById('mqttConnections').textContent = '-';
                document.getElementById('mqttSubscriptions').textContent = '-';
                document.getElementById('mqttMessages').textContent = '-';
                document.getElementById('publishRate').textContent = '-';
                document.getElementById('subscribeRate').textContent = '-';
            } catch (error) {
                console.log('VerneMQ metrics not accessible from browser (expected)');
            }
        }

        async function loadExecutionLogs() {
            try {
                const response = await fetch('/api/webhookmanagement/logs?pageSize=20');
                if (response.ok) {
                    const data = await response.json();
                    displayExecutionLogs(data.items || []);
                }
            } catch (error) {
                console.error('Error loading logs:', error);
            }
        }

        function displayExecutionLogs(logs) {
            const tbody = document.getElementById('logsTableBody');
            
            if (logs.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="5" class="text-center py-4 text-muted">No execution logs</td>
                    </tr>
                `;
                return;
            }

            tbody.innerHTML = logs.map(log => `
                <tr>
                    <td>${new Date(log.executionTime).toLocaleString()}</td>
                    <td>Webhook #${log.webhookId || log.id}</td>
                    <td><span class="badge bg-${getStatusColor(log.status)}">${log.status}</span></td>
                    <td>${log.responseTimeMs ? log.responseTimeMs + 'ms' : '-'}</td>
                    <td>${log.triggeredBy || '-'}</td>
                </tr>
            `).join('');
        }

        function getStatusColor(status) {
            const s = (status || '').toLowerCase();
            if (s === 'success') return 'success';
            if (s === 'failed') return 'danger';
            if (s === 'pending') return 'warning';
            if (s === 'timeout') return 'warning';
            return 'secondary';
        }

        // ========== Utilities ==========
        function showAlert(message, type) {
            const alert = document.createElement('div');
            alert.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
            alert.style.cssText = 'top: 80px; right: 20px; z-index: 9999; min-width: 300px;';
            alert.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.body.appendChild(alert);
            setTimeout(() => alert.remove(), 5000);
        }

        function refreshAllData() {
            loadMqttUsers();
            loadMqttUserStats();
            loadExecutionLogs();
            loadVerneMQMetrics();
        }

        // ========== Event Listeners ==========
        document.addEventListener('DOMContentLoaded', function() {
            loadMqttUsers();
            loadMqttUserStats();
            loadExecutionLogs();
            loadVerneMQMetrics();

            // Search and filter handlers
            document.getElementById('mqttUserSearch').addEventListener('input', 
                debounce(loadMqttUsers, 300));
            document.getElementById('mqttUserFilter').addEventListener('change', loadMqttUsers);
        });

        function debounce(func, wait) {
            let timeout;
            return function executedFunction(...args) {
                clearTimeout(timeout);
                timeout = setTimeout(() => func.apply(this, args), wait);
            };
        }
    </script>
